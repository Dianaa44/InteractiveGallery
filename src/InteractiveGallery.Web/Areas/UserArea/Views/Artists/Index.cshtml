@model IEnumerable<InteractiveGallery.Core.ArtistAggregate.Artist>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/MyLayout.cshtml";

}





<h2>Artists</h2>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-3">
            <a asp-action="Details" asp-route-id="@item.Id" class="card-text">
            <div class="card">
                <img class="img-fluid" src="../images/big/img1.jpg" alt="">
                <div class="card-body">
                    <h5 class="card-title">Name  @Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">Phone Numnber</p>
                    <p class="card-text">Email</p>
                    <div>
                    </div>
                </div>

            </div>
        </a>
        </div>
    }

</div>