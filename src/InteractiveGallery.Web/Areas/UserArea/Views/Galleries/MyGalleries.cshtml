@model IEnumerable<InteractiveGallery.Core.GalleryAggregate.Gallery>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "MyIndex";
    Layout = "~/Areas/UserArea/Views/Shared/MyLayout.cshtml";
}
<h1>My Galleries</h1>
<br>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-3">

            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="card">
                    <img class="img-fluid" src="~/images/big/img1.jpg" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        @*					<p class="card-text">Artist @Html.DisplayFor(modelItem => item.InitiatorArtist.Name)</p>
                    *@					<p class="card-text">Theme: @Html.DisplayFor(modelItem => item.Theme)</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn mb-1 btn-flat btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn mb-1 btn-flat btn-outline-danger">Delete</a>
                        <a asp-action="VisitGallery" asp-route-id="@item.Id">Visit Gallery</a>


                </div>
                </div>
            </a>
        </div>
    }

    <div class="col-md-6 col-lg-3">
        <a asp-action="Create" aria-expanded="false">
            <div class="card">
                <img src="~/Images/plus.png" class="img-fluid" style="height:200px;">
                <div class="card-body">
                    <h4 class="card-title">Create new gallery</h4>
                </div>
            </div>
        </a>
    </div>

</div>
