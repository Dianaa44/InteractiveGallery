@model IEnumerable<InteractiveGallery.Core.ArtistAggregate.Artist>

@{
    ViewData["Title"] = "Index";
	Layout = "~/Areas/AdminArea/Views/Shared/MyLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h2>Artists</h2>
<div class="row">

	@foreach (var item in Model)
	{
		<div class="col-md-6 col-lg-3">
			<div class="card">
				<img class="img-fluid" src="../images/big/img1.jpg" alt="">
				<div class="card-body">
					<h5 class="card-title">Name  @Html.DisplayFor(modelItem => item.Name)</h5>
					<p class="card-text">Phone Numnber</p>
					<p class="card-text">Email</p>
				</div>
				<div>
					<a asp-action="Edit" asp-route-id="@item.Id" class="card-text">Edit</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="card-text">Details</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="card-text">Delete</a>
				</div>
			</div>
		</div>
	}

</div>