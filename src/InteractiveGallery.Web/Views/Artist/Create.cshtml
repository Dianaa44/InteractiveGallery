@using Microsoft.AspNetCore.Http
@model InteractiveGallery.Web.ViewModels.ArtistViewModel

<h1>Create New Artist</h1>

<form class="form" method="post" action="@Url.Action("Create","Artist")">
	<div class="form-group">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Biography" class="control-label"></label>
		<textarea asp-for="Biography" class="form-control"></textarea>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</div>
</form>