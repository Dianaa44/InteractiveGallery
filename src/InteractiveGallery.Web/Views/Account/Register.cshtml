
@model RegistrationViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/LogInRegister/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/LogInRegister/css/style.css">
</head>
<body>
<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form id="registerForm" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="@Model.Email"><i class="zmdi zmdi-email"></i></label>
                <input asp-for="@Model.Email" type="email" name="email" id="email" placeholder="Your Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" ><i class="zmdi zmdi-lock"></i></label>
                <input asp-for="@Model.Password" type="password" name="pass" id="pass" placeholder="Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword" ><i class="zmdi zmdi-lock"></i></label>
                <input asp-for="@Model.ConfirmPassword" type="password" name="pass" id="pass" placeholder="Repeat your password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" ><i class="zmdi zmdi-account material-icons-name"></i></label>
                <input asp-for="@Model.Name" type="text" name="name" aria-required="true" id="name" placeholder="Your Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Biography"><i class="zmdi zmdi-account material-icons-name"></i></label>
                <input asp-for="@Model.Biography" type="text" name="name" aria-required="true" id="name" placeholder="Your Bio" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-button">
                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
            </div>
@*            <button value="Register" id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
*@        </form>
    </div>
                <div class="signup-image">
                    <figure><img src="~/LogInRegister/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="http://localhost:57678/Identity/Account/Login" class="signup-image-link">I am already member</a>
                </div>
</div>
</div>
</section>
    </div>
<script src="~/LogInRegister/vendor/jquery/jquery.min.js"></script>
<script src="~/LogInRegister/js/main.js"></script>
</body>
</html>