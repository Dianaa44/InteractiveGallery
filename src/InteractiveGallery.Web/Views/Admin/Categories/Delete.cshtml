@model InteractiveGallery.Core.CategoryAggregate.CategoryValueObject



@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this category?</h3>
<div>
	<h4>Gallery</h4>
	<div class="col-md-6 col-lg-12">
		<div class="card">
			<div class="card-body">
				<p class="card-text">Artist @Html.DisplayFor(model => model.Name)</p>
				<p class="card-text">Theme @Html.DisplayFor(model => model.Description)</p>
				<pr>
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />
						<input type="submit" value="Delete" class="btn btn-danger" /> |
						<a asp-action="Index">Back to List</a>
					</form>

			</div>
		</div>
	</div>
</div>


